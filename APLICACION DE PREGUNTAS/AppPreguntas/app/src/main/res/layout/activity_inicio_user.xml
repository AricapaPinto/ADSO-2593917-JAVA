<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".InicioUser">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOLA"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/container_cuestionarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- aquÃ­ metemos los cuestionarios :) -->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|end"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="crearCuestionario"
            android:text="Agregar"
            android:layout_margin="10dp"
            app:icon="@drawable/baseline_add_circle_24"
            app:iconGravity="end"
            app:backgroundTint="#159c3b"
            >

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cerrar"
            android:text="Cerrar"
            android:layout_margin="10dp"
            app:icon="@drawable/icon_sing_off"
            app:iconGravity="end"
            app:backgroundTint="@color/design_default_color_error"
            >

        </com.google.android.material.button.MaterialButton>


    </LinearLayout>


</FrameLayout>
